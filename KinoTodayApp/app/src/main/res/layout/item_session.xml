<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:id="@+id/session_card">
                <TextView
                        android:id="@+id/session_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:typeface="monospace"
                        android:layout_toRightOf="@+id/session_img" android:layout_alignParentTop="true"/>
                <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/session_img" android:src="@mipmap/ic_launcher"
                        android:layout_alignParentStart="true" android:layout_centerVertical="true"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BUY TICKET"
                        android:id="@+id/purchase_button" android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true" android:layout_alignParentBottom="true"
                        android:background="@android:color/transparent"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:id="@+id/map_img" android:layout_below="@+id/session_title"
                        android:layout_toRightOf="@+id/session_img" android:layout_toEndOf="@+id/session_img"
                        android:src="@mipmap/ic_place_black_24dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Small Text"
                        android:id="@+id/cinema_address" android:layout_below="@+id/session_title"
                        android:layout_toRightOf="@+id/map_img" android:layout_toEndOf="@+id/map_img"/>
                <ImageView android:layout_width="wrap_content" android:layout_height="18dp"
                           android:id="@+id/price_img" android:layout_below="@+id/cinema_address"
                           android:layout_toRightOf="@+id/session_img" android:layout_toEndOf="@+id/session_img"
                           android:src="@mipmap/ic_attach_money_black_24dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="18dp"
                          android:textAppearance="?android:attr/textAppearanceSmall" android:text="Small Text"
                          android:id="@+id/price" android:layout_below="@+id/cinema_address"
                          android:layout_toRightOf="@+id/map_img" android:layout_toEndOf="@+id/map_img"/>
                <ImageView android:layout_width="wrap_content" android:layout_height="18dp"
                           android:id="@+id/time_img" android:layout_below="@+id/price"
                           android:layout_toRightOf="@+id/session_img" android:layout_toEndOf="@+id/session_img"
                           android:src="@mipmap/ic_access_time_black_24dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="18dp"
                          android:textAppearance="?android:attr/textAppearanceSmall" android:text="Small Text"
                          android:id="@+id/time" android:layout_below="@+id/price"
                          android:layout_toRightOf="@+id/map_img" android:layout_toEndOf="@+id/map_img"
                          android:layout_alignParentEnd="false" android:layout_alignParentStart="false"/>
        </RelativeLayout>
</android.support.v7.widget.CardView>